{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "src",
        "noImplicitAny": true,
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "allowJs": true,
        "strict": false,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}